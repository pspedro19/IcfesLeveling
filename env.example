# ICFES LEVELING - Environment Variables

# OpenAI API (opcional para desarrollo)
OPENAI_API_KEY=your_openai_api_key_here

# Database URLs (usar valores por defecto para desarrollo)
DATABASE_URL=postgresql://gameplay:gameplay123@postgres:5432/gameplay_db
REDIS_URL=redis://redis:6379
CLICKHOUSE_URL=clickhouse://default:clickhouse123@clickhouse:9000/gameplay_analytics

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Game Settings
MAX_QUESTIONS_PER_BATTLE=20
BATTLE_TIME_LIMIT_SECONDS=30
CRITICAL_HIT_TIME_THRESHOLD=3
EXPERIENCE_MULTIPLIER=1.0
ORB_DROP_RATE=0.8

# AI Settings
AI_EXPLANATION_MAX_TOKENS=150
AI_CACHE_TTL_DAYS=30

# Security
PASSWORD_MIN_LENGTH=8
MAX_LOGIN_ATTEMPTS=5
LOCKOUT_DURATION_MINUTES=15

# Frontend URLs
NEXT_PUBLIC_API_URL=http://localhost:8006
NEXT_PUBLIC_WS_URL=ws://localhost:8003 